---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { FOOTER_CONTENT } from '../../lib/footer-content';
import { getCollection } from 'astro:content';

const locale = 'en';

// Use shared footer content
const footerContent = FOOTER_CONTENT[locale];

// Load team members from CMS
const teamMembers = await getCollection('team-members');
const activeMembers = teamMembers.filter(member => member.data.is_active);

// Group by department
const teamData: Record<string, any[]> = {};
activeMembers.forEach(member => {
  const department = member.data.department.en;
  if (!teamData[department]) {
    teamData[department] = [];
  }
  teamData[department].push({
    name: member.data.name,
    title: member.data.title.en,
    email: member.data.email,
    phone: member.data.phone || '',
    order: member.data.order
  });
});

// Sort members within each department by order
Object.keys(teamData).forEach(department => {
  teamData[department].sort((a, b) => a.order - b.order);
});

// Define department order (English)
const departmentOrder = [
  'Board of Directors',
  'Fashion Fairs',
  'Home Textile and Decoration Fairs',
  'Furniture and Furniture Auxiliary Industry & Electrical and Lighting Fairs',
  'Mold & Plastic, Specialty, Pool',
  'Leather Fairs & Security Systems Fairs',
  'Technical Project',
  'Fair Travel / TF Travel Agency',
  'Finance & Accounting',
  'Foreign Relations and International Sales',
  'Logistics and Transportation',
  'Board Chairman Assistant',
  'Information Technology',
  'Graphic Design'
];

// Create ordered team data
const orderedTeamData: Record<string, any[]> = {};
departmentOrder.forEach(department => {
  if (teamData[department]) {
    orderedTeamData[department] = teamData[department];
  }
});

