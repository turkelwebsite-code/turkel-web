        chronologyData[year].push({
          name: fair.basic_info.name_tr,
          city: city,
          country: country,
          area: fair.chronology_info?.area || '',
          participants: fair.chronology_info?.participants || '',
          sector: fair.basic_info.sector || '',
          description: fair.chronology_info?.description || ''
        });
      }
    }
  });
});

