    .fairs-container {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Tablet: 2 cards per row */
  @media (min-width: 768px) and (max-width: 1279px) {
    .fairs-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

