---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { FOOTER_CONTENT } from '../../lib/footer-content';
import VisitorFormModal from '../../components/VisitorFormModal.astro';
import ParticipantFormModal from '../../components/ParticipantFormModal.astro';

const locale = 'en';
const currentPath = '/en/about-us/';

// About page content
const aboutContent = {
  title: "About Us",
  subtitle: "Türkel Fuarcılık A.Ş.",
  description: "Since 1993, officially authorized and certified by the T.C. Ministry of Trade as an Overseas Organizer and Overseas Commercial Organizer. Our company organizes distinguished, renowned international sectoral trade fairs abroad in Turkey.",
  
  sections: [
    {
      title: "Our Vision",
      content: "To provide the highest quality service by prioritizing customer needs in our international trade sector organizations and to be a leading company."
    },
    {
      title: "Our Mission", 
      content: "To continuously increase our market share in Turkey while developing our domestic and foreign customer base in a balanced way. To increase measurable customer satisfaction every year. To maintain and sustain the leading position in the sector with a quality and reliable service approach that leads the development of the sector, and to make a difference in the international arena by organizing events using technology and auxiliary elements effectively."
    }
  ],
  
  highlights: [
    "LeShow Moscow / International Leather and Outerwear Fashion Fairs",
    "HomeDeco Kazakhstan Home Textile and Decoration Fair and Organizations"
  ],
  
  experience: "maintains its leading position in the sector with such prestigious organizations.",
  
  companyInfo: {
    description: "Türkel Fuarcılık A.Ş. also operates in more than 50 countries across 4 continents with its wide field of activity; leather and fur, ready-to-wear, home textiles, decoration, furniture, construction, industry, energy, lighting, machinery, marble, plastic, automotive, yacht and water sports sectors, organizing Turkish National Participant Groups and National Pavilion organizations at international trade fairs.",
    
    services: "Our company is proud to contribute to Turkey's global trade potential by organizing its own branded international fairs and ensuring the participation of distinguished Turkish producer and exporter brands in prestigious fairs worldwide."
  }
};

// Use shared footer content
const footerContent = FOOTER_CONTENT[locale];
---

<BaseLayout
  title="About Us - Türkel Fuarcılık"
  description="Türkel Fuarcılık A.Ş. Since 1993, officially authorized international fair organizer by the T.C. Ministry of Trade"
  locale={locale}
>
  <!-- Header -->
  <Header locale={locale} />

  <main class="min-h-screen">
    <!-- Breadcrumb Section -->
    <section class="py-6 lg:py-8 relative" style="background-color: #FCFCFC;">
      <div class="mx-auto px-5" style="max-width: calc(100% - 20px);">
        <div class="container mx-auto px-4 lg:px-8">
          <nav class="flex items-center justify-center space-x-2 text-sm text-gray-600 mb-6" style="font-family: 'Radio Canada Big', sans-serif;">
            <a href="/en/" class="hover:text-[#CE1A28] transition-colors">Home</a>
            <span>/</span>
            <span class="text-gray-900 font-medium">About Us</span>
          </nav>
          
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 text-center" style="font-family: 'Radio Canada Big', sans-serif;">
            About Us
          </h1>
        </div>
      </div>
      
              <!-- Bottom Border Line -->
        <div class="absolute bottom-0 left-0 w-full h-0.5" style="background-color: #CE1A28;"></div>
    </section>

    <!-- Main Content Section -->
    <section class="py-8 lg:py-12">
      <div class="mx-auto px-5" style="max-width: calc(100% - 20px); background-color: white; border-radius: 10px; margin: 10px auto;">
        <div class="container mx-auto px-4 lg:px-8 py-6 lg:py-8">
          <div class="max-w-4xl mx-auto space-y-8">
            
            <!-- First Paragraph -->
            <div class="text-lg text-gray-700 leading-relaxed" style="font-family: 'Radio Canada Big', sans-serif;">
              <p class="mb-6">
                Since 1993, officially authorized international fair organizer by the T.C. Ministry of Trade as a certified Overseas Organizer and Overseas Commercial Organizer. Our company organizes distinguished, renowned international sectoral commercial fairs abroad in Turkey.
              </p>
              
              <p class="mb-8">
                Türkel Fuarcılık A.Ş. also operates in more than 50 countries across 4 continents with its wide field of activity; leather and fur, ready-to-wear, home textiles, decoration, furniture, construction, industry, energy, lighting, machinery, marble, plastic, automotive, yacht and water sports sectors, organizing Turkish National Participant Groups and National Pavilion organizations at international trade fairs.
              </p>
            </div>

            <!-- Prestigious Organizations -->
            <div class="flex flex-col lg:flex-row gap-4 lg:gap-6 mb-6">
              <!-- LeShow Moscow Button -->
              <div class="flex-1 relative overflow-hidden rounded-lg border-2" style="background-color: #FCFCFC; border-color: #CE1A28;">
                <div class="p-6 lg:p-8 text-center relative">
                  <!-- Overlay Corners -->
                  <div class="absolute top-0 left-0 w-8 h-8 bg-white opacity-20 rounded-br-full"></div>
                  <div class="absolute top-0 right-0 w-8 h-8 bg-white opacity-20 rounded-bl-full"></div>
                  <div class="absolute bottom-0 left-0 w-8 h-8 bg-white opacity-20 rounded-tr-full"></div>
                  <div class="absolute bottom-0 right-0 w-8 h-8 bg-white opacity-20 rounded-tl-full"></div>
                  
                  <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-2 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    LeShow Moscow
                  </h3>
                  <p class="text-gray-700 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    International Leather and Outerwear Fashion Fairs
                  </p>
                </div>
              </div>
              
              <!-- HomeDeco Kazakhstan Button -->
              <div class="flex-1 relative overflow-hidden rounded-lg border-2" style="background-color: #FCFCFC; border-color: #CE1A28;">
                <div class="p-6 lg:p-8 text-center relative">
                  <!-- Overlay Corners -->
                  <div class="absolute top-0 left-0 w-8 h-8 bg-white opacity-20 rounded-br-full"></div>
                  <div class="absolute top-0 right-0 w-8 h-8 bg-white opacity-20 rounded-bl-full"></div>
                  <div class="absolute bottom-0 left-0 w-8 h-8 bg-white opacity-20 rounded-tr-full"></div>
                  <div class="absolute bottom-0 right-0 w-8 h-8 bg-white opacity-20 rounded-tl-full"></div>
                  
                  <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-2 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    HomeDeco Kazakhstan
                  </h3>
                  <p class="text-gray-700 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    Home Textile and Decoration Fair and Organizations
                  </p>
                </div>
              </div>
            </div>
            
            <p class="text-center text-lg text-gray-700 italic mb-8" style="font-family: 'Radio Canada Big', sans-serif;">
              continues to maintain its leading position in the industry with such prestigious organizations.
            </p>

            <!-- Last Paragraph -->
            <div class="text-lg text-gray-700 leading-relaxed" style="font-family: 'Radio Canada Big', sans-serif;">
              <p>
                Our company is proud to contribute to Turkey's global trade potential by organizing its own branded international fairs and ensuring the participation of distinguished Turkish producer and exporter brands in prestigious fairs worldwide.
              </p>
            </div>

            <!-- Call to Action -->
            <div class="text-center pt-8">
              <div class="flex flex-row gap-3 mb-6 max-w-md mx-auto">
                <button 
                  onclick="openVisitorModal()"
                  class="bg-[#CE1A28] text-white px-4 py-3 rounded-lg font-medium hover:bg-[#B01620] transition-colors flex-1 text-sm"
                  style="font-family: 'Radio Canada Big', sans-serif;"
                >
                  Visitor Form
                </button>
                <button 
                  onclick="openParticipantModal()"
                  class="border-2 border-[#CE1A28] text-[#CE1A28] px-4 py-3 rounded-lg font-medium hover:bg-[#CE1A28] hover:text-white transition-colors flex-1 text-sm"
                  style="font-family: 'Radio Canada Big', sans-serif;"
                >
                  Participant Form
                </button>
              </div>
              
              <h2 class="text-lg lg:text-xl text-gray-900 font-normal" style="font-family: 'Radio Canada Big', sans-serif;">
                Leading and experienced professional international fair and commercial event organizer in the Turkish fair industry
              </h2>
            </div>
          </div>
        </div>
      </div>
    </section>


  </main>

  <!-- Footer -->
  <Footer locale={locale} content={footerContent} />

  <!-- Modals -->
  <VisitorFormModal locale={locale} />
  <ParticipantFormModal locale={locale} />
</BaseLayout>

<style>
  /* Custom styles for about page */
  .hero-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  }
  
  /* Smooth animations */
  section {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
