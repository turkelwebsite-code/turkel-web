---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { FOOTER_CONTENT } from '../../lib/footer-content';
import VisitorFormModal from '../../components/VisitorFormModal.astro';
import ParticipantFormModal from '../../components/ParticipantFormModal.astro';

const locale = 'en';
const currentPath = '/en/about-us/';

// About page content
const aboutContent = {
  title: "About Us",
  subtitle: "TURKEL Fair Organization Inc.",
  description: "TURKEL Fair Organization Inc. (http://turkel.com.tr/en/home/) is a leading & experienced professional international trade show & event organizer company in the Turkish exhibition industry. TURKEL offers distinguished services at international standards to its Turkish and foreign customers in the fields of fair participation planning, organization management, promotion, marketing, and PR services with its highly experienced, innovative, and devoted 76 professional manager and sales team staff appointed in the Istanbul Main Office, Moscow/RF, and Almaty/Kazakhstan field offices.",
  
  sections: [
    {
      title: "Our Services",
      content: "In addition, TURKEL provides its international sectoral trade fair exhibitor customers privileged service support in exhibition stand design and installation, technical services, logistics and transportation, international travel, transportation, and accommodation."
    },
    {
      title: "Official Authorization", 
      content: "Since 1993, as the officially licensed and authorized international trade event organizer of the Turkish Ministry of Trade (https://www.trade.gov.tr/trade-fairs-buyers-mission-and-trade-delegations), TURKEL holds its proven international sectoral trade exhibitions in Turkiye and abroad (LeShow Moscow & Istanbul International Leather, Fur & Outerwear Fashion Fairs, HomeDeco International Exhibition for Home Textile & Decoration/Kazakhstan)."
    }
  ],
  
  highlights: [
    "LeShow Moscow & Istanbul International Leather, Fur & Outerwear Fashion Fairs",
    "HomeDeco International Exhibition for Home Textile & Decoration/Kazakhstan"
  ],
  
  experience: "continues to maintain its leading position in the industry with such prestigious organizations.",
  
  companyInfo: {
    description: "Besides, under the Turkish Ministry of Trade's approbation, patronage, and government monetary fund subsidy support, TURKEL organizes \"Turkish National Exhibitor Group\" attendances (with a minimum of 10 (Ten) exhibitors) and renders professional exhibition sales agency services to the top-line international sectoral trade shows worldwide catering to the needs of versatile niche industry segments such as leather and fur, ready-to-wear and outerwear garment fashion (Men, Women, Baby, and Toddler), textile & fabric, denim and sportswear, bridal fashion, cosmetics, luxury consumer goods, home textile & decoration, furniture manufacturing & sub-industry products, bedding equipment & finished products, office & facility furnishings, garden lifestyle & equipment, building elements and construction equipment, energy, electricity, lighting, industrial machinery & products, stone & marble, plastics & mould equipment and product manufacture technologies, cable and wire products, yacht and water sports equipment, railways, and automotive industry sectors held in a wide range of geography spreading over 4 (Four) continents and in more than 50 (Fifty) countries such as Azerbaijan, Belarus, Brazil, Cameroon, Canada, China, Croatia, Czech Republic, Denmark, Egypt, Ethiopia, France, Germany, Ghana, Greece, Hong Kong, Hungary, Iran, Israel, Italy, Jordan, Kazakhstan, Kenya, Kuwait, Latvia, Lithuania, Lebanon, Mexico, Morocco, Netherlands, Nigeria, UAE, UK, USA, Uzbekistan, Poland, Portugal, Qatar, Republic of South Africa, Romania, Russian Federation, Saudi Arabia, Serbia, Singapore, South Korea, Spain, Sudan, Syria, Tatarstan, Tunisia, Ukraine, Venezuela, and Zimbabwe.",
    
    services: "TURKEL is always honored and proud to significantly contribute to Turkiye's global trade and export potential both by organizing its own international sectoral trade shows and by ensuring attendance of the top-notch Turkish wholesale manufacturer and exporter brands as a Turkish National Exhibitor Group in the prestigious international sectoral trade fairs worldwide."
  }
};

// Use shared footer content
const footerContent = FOOTER_CONTENT[locale];
---

<BaseLayout
  title="About Us - Türkel Fuarcılık"
  description="Türkel Fuarcılık A.Ş. Since 1993, officially authorized international fair organizer by the T.C. Ministry of Trade"
  locale={locale}
>
  <!-- Header -->
  <Header locale={locale} />

  <main class="min-h-screen">
    <!-- Breadcrumb Section -->
    <section class="py-6 lg:py-8 relative" style="background-color: #FCFCFC;">
      <div class="mx-auto px-5" style="max-width: calc(100% - 20px);">
        <div class="container mx-auto px-4 lg:px-8">
          <nav class="flex items-center justify-center space-x-2 text-sm text-gray-600 mb-6" style="font-family: 'Radio Canada Big', sans-serif;">
            <a href="/en/" class="hover:text-[#CE1A28] transition-colors">Home</a>
            <span>/</span>
            <span class="text-gray-900 font-medium">About Us</span>
          </nav>
          
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 text-center" style="font-family: 'Radio Canada Big', sans-serif;">
            About Us
          </h1>
        </div>
      </div>
      
              <!-- Bottom Border Line -->
        <div class="absolute bottom-0 left-0 w-full h-0.5" style="background-color: #CE1A28;"></div>
    </section>

    <!-- Main Content Section -->
    <section class="py-8 lg:py-12">
      <div class="mx-auto px-5" style="max-width: calc(100% - 20px); background-color: white; border-radius: 10px; margin: 10px auto;">
        <div class="container mx-auto px-4 lg:px-8 py-6 lg:py-8">
          <div class="max-w-4xl mx-auto space-y-8">
            
            <!-- Main Content -->
            <div class="text-lg text-gray-700 leading-relaxed" style="font-family: 'Radio Canada Big', sans-serif;">
              <p class="mb-6">
                Türkel Fuarcılık A.Ş. has been operating as an officially authorized and certified International Trade Fair Organizer by the Ministry of Trade of the Republic of Turkey since 1993. Within the context of this authorization, our company organizes exclusive and internationally well-known sectoral trade fairs abroad on behalf of Turkey, contributing to our country's foreign trade and the promotion of Turkish brands in the global market.
              </p>
              
              <p class="mb-6">
                With its network of activities spanning four continents, Türkel Fuarcılık A.Ş. has organized Turkish national participation in international fairs organized in more than 50 countries to date in many sectors such as leather, fur, ready-to-wear, home textiles, decoration, furniture, construction industry, energy, lighting, machinery, marble, plastics, automotive, yachts, and water sports.
              </p>
              
              <p class="mb-8">
                Türkel Fuarcılık continues to serve Turkey's export goals by both organizing international trade fairs under its own brand and facilitating the participation of Turkish manufacturers and exporters in the world's leading trade fairs.
              </p>
            </div>


            <!-- Prestigious Organizations -->
            <div class="flex flex-col lg:flex-row gap-4 lg:gap-6 mb-6">
              <!-- LeShow Moscow Button -->
              <div class="flex-1 relative overflow-hidden rounded-lg border-2" style="background-color: #FCFCFC; border-color: #CE1A28;">
                <div class="p-6 lg:p-8 text-center relative">
                  <!-- Overlay Corners -->
                  <div class="absolute top-0 left-0 w-8 h-8 bg-white opacity-20 rounded-br-full"></div>
                  <div class="absolute top-0 right-0 w-8 h-8 bg-white opacity-20 rounded-bl-full"></div>
                  <div class="absolute bottom-0 left-0 w-8 h-8 bg-white opacity-20 rounded-tr-full"></div>
                  <div class="absolute bottom-0 right-0 w-8 h-8 bg-white opacity-20 rounded-tl-full"></div>
                  
                  <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-2 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    Leshow Moscow
                  </h3>
                  <p class="text-gray-700 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    International Winter Fashion Trade Show
                  </p>
                </div>
              </div>
              
              <!-- HomeDeco Kazakhstan Button -->
              <div class="flex-1 relative overflow-hidden rounded-lg border-2" style="background-color: #FCFCFC; border-color: #CE1A28;">
                <div class="p-6 lg:p-8 text-center relative">
                  <!-- Overlay Corners -->
                  <div class="absolute top-0 left-0 w-8 h-8 bg-white opacity-20 rounded-br-full"></div>
                  <div class="absolute top-0 right-0 w-8 h-8 bg-white opacity-20 rounded-bl-full"></div>
                  <div class="absolute bottom-0 left-0 w-8 h-8 bg-white opacity-20 rounded-tr-full"></div>
                  <div class="absolute bottom-0 right-0 w-8 h-8 bg-white opacity-20 rounded-tl-full"></div>
                  
                  <h3 class="text-lg lg:text-xl font-bold text-gray-900 mb-2 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    Homedeco Kazakhstan
                  </h3>
                  <p class="text-gray-700 relative z-10" style="font-family: 'Radio Canada Big', sans-serif;">
                    International Exhibition of Home Textiles and Decor
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Bottom Description -->
            <div class="text-center mb-8">
              <p class="text-lg text-gray-700" style="font-family: 'Radio Canada Big', sans-serif;">
                Türkel Fuarcılık is a leading professional company in the industry, with extensive experience in international trade fairs and commercial events.
              </p>
            </div>

          </div>
        </div>
      </div>
    </section>


  </main>

  <!-- Footer -->
  <Footer locale={locale} content={footerContent} />

  <!-- Modals -->
  <VisitorFormModal locale={locale} />
  <ParticipantFormModal locale={locale} />
</BaseLayout>

<style>
  /* Custom styles for about page */
  .hero-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  }
  
  /* Smooth animations */
  section {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
