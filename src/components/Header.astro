<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Mobile dropdown toggle function
  function toggleMobileDropdown(menuId: string) {
    const dropdown = document.getElementById(`mobile-dropdown-${menuId}`);
    
    // Find arrow in the same mobile-nav-item container
    const mobileNavItem = dropdown?.closest('.mobile-nav-item');
    const arrow = mobileNavItem?.querySelector('.mobile-dropdown-toggle svg');
    
    if (dropdown) {
      dropdown.classList.toggle('hidden');
      
      // Rotate arrow
      if (arrow) {
        const arrowElement = arrow as HTMLElement;
        if (dropdown.classList.contains('hidden')) {
          arrowElement.style.transform = 'rotate(0deg)';
        } else {
          arrowElement.style.transform = 'rotate(180deg)';
        }
      }
    }
  }
  
  // Make function globally available
  (window as any).toggleMobileDropdown = toggleMobileDropdown;
  
  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (mobileMenu && !mobileMenu.contains(e.target as Node) && !mobileMenuButton?.contains(e.target as Node)) {
      mobileMenu.classList.add('hidden');
    }
  });
  
  // Close mobile menu on window resize
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024 && mobileMenu) {
      mobileMenu.classList.add('hidden');
    }
  });
</script>
