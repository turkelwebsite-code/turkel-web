              {/* Mobile dropdown toggle */}
              {(item as any).hasDropdown && (
                <button 
                  class="mobile-dropdown-toggle p-2 text-gray-400 hover:text-primary transition-colors"
                  onclick={`toggleMobileDropdown('${
                    item.label === (locale === 'tr' ? 'KURUMSAL' : 'CORPORATE') ? 'kurumsal' :
                    item.label === (locale === 'tr' ? 'FUARLARIMIZ' : 'OUR FAIRS') ? 'fuarlarimiz' :
                    item.label === (locale === 'tr' ? 'HÄ°ZMETLERÄ°MÄ°Z' : 'SERVICES') ? 'hizmetlerimiz' :
