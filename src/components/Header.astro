              <div id="mobile-dropdown-fuarlarimiz" class="hidden pl-4 mt-2 space-y-2 border-l-2 border-gray-200">
                {activeFairYears.map(fairYear => {
                  const slug = locale === 'tr' 
                    ? (fairYear.data.page_slug || `${fairYear.data.year}-fuar-takvimi`)
                    : (fairYear.data.page_slug_en || `${fairYear.data.year}-fair-calendar`);
                  const menuTitle = locale === 'tr' 
                    ? (fairYear.data.page_content?.menu_title_tr || `${fairYear.data.year} Fuar Takvimi`)
