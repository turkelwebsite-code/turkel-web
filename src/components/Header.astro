            </div>
            
            {/* Mobile Dropdown Menus */}
            {(item as any).hasDropdown && item.label === (locale === 'tr' ? 'KURUMSAL' : 'CORPORATE') && (
              <div id="mobile-dropdown-kurumsal" class="hidden pl-4 mt-2 space-y-2 border-l-2 border-gray-200">
                <a href={`/${locale}/${locale === 'tr' ? 'hakkimizda' : 'about-us'}/`} class="block text-sm text-gray-600 hover:text-primary transition-colors py-1">
                  {locale === 'tr' ? 'HakkÄ±mÄ±zda' : 'About Us'}
                </a>
                <a href={`/${locale}/${locale === 'tr' ? 'kronoloji' : 'chronology'}/`} class="block text-sm text-gray-600 hover:text-primary transition-colors py-1">
                  {locale === 'tr' ? 'Kronoloji' : 'Chronology'}
                </a>
                <a href="/tr/ekibimiz/" class="block text-sm text-gray-600 hover:text-primary transition-colors py-1" data-cache-bust={Date.now()} onclick="console.log('Ekibimiz link clicked: /tr/ekibimiz/'); return true;">
